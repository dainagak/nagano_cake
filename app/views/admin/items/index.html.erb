<h1>商品一覧画面</h1>
<%= link_to '新規登録', new_admin_item_path , class:"btn btn-success" %>

<% @items.each do |item| %>
  <tr>

    <td><%= item.id %></td>
    <td>商品名</td>
    <td><%= link_to item.name, admin_item_path(item) %></td>
    <td>税込価格</td>
    <td><%= item.price %></td>
    <td>ジャンル</td>
    <td><%= item.genre.name %></td>
    <td>販売ステータス</td>
    <td><% if item.is_active == false %>
    販売中
    <% else %>
    販売停止中
    <% end %>
    </td>
  </tr>
<% end %>