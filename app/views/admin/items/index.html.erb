<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>商品一覧</h2>
      <div class="text-right">
        <%= link_to '新規登録', new_admin_item_path , class:"btn btn-success" %>
      </div>
        <table class="table">
          <thead>
            <tr>
              <!--<th>画像</th>-->
              <th>商品一覧</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
		          <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px; margin: 10px 0;">
            <tr>
    				<%#= attachment_image_tag item, :image, :fill, 200, 150, format: 'jpeg',fallback: "no_image.jpg" %><br>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active == false %>
            販売中
            <% else %>
            販売停止中
            <% end %>
    </div>
            </td>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
	</div>