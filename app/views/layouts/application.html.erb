<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <% if admin_signed_in? %>
      <li>
        <%= link_to 'ジャンル一覧', admin_genres_path %>
      </li>
      <li>
        <%= link_to '商品一覧', admin_items_path %>
      </li>
      <li>
        <%= link_to '会員一覧', admin_customers_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% elsif customer_signed_in? %>
      <li>
        <%= link_to 'マイページ', public_show_path(current_customer.id) %>
      </li>
      <li>
        <%= link_to '商品一覧', items_path %>
      </li>
      <li>
        <%= link_to 'カート画面', public_cart_items_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>

    <% else %>
      <li>
        <%= link_to "会員登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
